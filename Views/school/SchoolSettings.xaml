<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DGSWManager.Views.school.SchoolSettings"
             Title="SchoolSettings">
    <VerticalStackLayout>
        <Label 
            Text="학교 정보 검색"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="SchoolName"
            Placeholder="학교이름 입력"/>
        <Entry
            x:Name="SchoolGrade"
            Keyboard="Numeric"
            MaxLength="1"
            Placeholder="학년"/>
        <Entry
            x:Name="SchoolClass"
            Keyboard="Numeric"
            MaxLength="1"
            Placeholder="반"/>
    </VerticalStackLayout>
</ContentPage>